<!DOCTYPE html>
<html>
  <head>
    <title>glow-pi<%= title ? ': ' + title : '' %></title>
    <script src="http://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">

    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="/javascripts/api.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  </head>
  <body>
    <div class='container'>
      <h1>glow-pi</h1>
      <div id="quick-patterns-init">Loading....</div>
      <div style="display:none" id="quick-patterns" class="btn-group-vertical btn-group-lg" data-toggle="buttons">
        <% for (var i=0; i < quickPatterns.length; i++) { %>
          <label class="btn btn-default">
            <input type='radio' class='pattern' name='pattern' value="<%= quickPatterns[i].id %>"><%= quickPatterns[i].friendlyName %>
          </label>
        <% } %>
      </div>
      <div style="margin-top: 20px">
        <small>
        <a href="http://github.com/dlopuch/glow-pi">github.com/dlopuch/glow-pi</a>
        </small>
      </div>

    </div>
  </body>
</html>